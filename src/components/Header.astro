---
import HeaderLink from './HeaderLink.astro';
import Social from './Social.astro';
import ThemeIcon from './ThemeIcon.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/links">Links</HeaderLink>
		</div>
		
		<div class="social-links">
			<Social platform="linkedin" username="in/florinbobis" icon="mdi:linkedin"/>
			<Social platform="github" username="twentytwokhz" icon="line-md:github-loop"/>
			<Social platform="instagram" username="florinbobis" icon="mdi:instagram"/>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links {
		display: flex;
		gap: 0.3em;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
